    {
      "title": "Music Health",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "count(probe_success{instance=~\".*(music|musdowlow).*\"} == 1) / count(probe_success{instance=~\".*(music|musdowlow).*\"}) * 100",
          "legendFormat": "Health"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 0,
          "thresholds": {
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "green", "value": 100 }
            ]
          }
        }
      },
      "options": { "colorMode": "background", "graphMode": "none", "textMode": "value" }
    },
