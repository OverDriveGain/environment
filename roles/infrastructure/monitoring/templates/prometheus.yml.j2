global:
  scrape_interval: 30s
  evaluation_interval: 30s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

{% set http_checks = all_health_checks | selectattr('type', 'equalto', 'http') | list %}
{% set tcp_checks  = all_health_checks | selectattr('type', 'equalto', 'port') | list %}

  # HTTP health checks via Blackbox Exporter
  - job_name: 'blackbox-http'
    metrics_path: /probe
    params:
      module: [http_2xx]
    static_configs:
{% for check in http_checks %}
      - targets: ['{{ check.check }}']
        labels:
          svc_name: '{{ check.name }}'
{% if check.category is defined %}
          service_group: '{{ check.category }}'
{% endif %}
{% endfor %}
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: blackbox-exporter:9115

  # TCP port checks via Blackbox Exporter
  - job_name: 'blackbox-tcp'
    metrics_path: /probe
    params:
      module: [tcp_connect]
    static_configs:
{% for check in tcp_checks %}
      - targets: ['{{ check.host | default("localhost") }}:{{ check.check }}']
        labels:
          svc_name: '{{ check.name }}'
{% if check.category is defined %}
          service_group: '{{ check.category }}'
{% endif %}
{% endfor %}
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: blackbox-exporter:9115
